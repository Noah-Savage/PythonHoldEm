#Create seed to ensure truly random numbers
import random
seed1 = random.randint(1, 100)
random.seed(seed1)

class Winner:
    def who_wins(uc1, uc2, hc1, hc2, table):
        if uc1 not in table and uc2 not in table and hc1 not in table and hc2 not in table:
            if (((uc1 > hc1) and (uc1 > hc2)) or ((uc2 > hc1) and (uc2 > hc2))):
                print("You got the high card!")
                return True
            else:
                print("The house got the high card!")
                return False
        if(((uc1 in table) or (uc2 in table)) and ((hc1 in table) or (hc2 in table))):
            if((table.count(uc1) > table.count(hc1)) and (table.count(uc1) > table.count(hc2))):
                return True
            else:
                return False
            if((table.count(uc1) is table.count(hc1)) and (table.count(uc1) is table.count(hc2))):
                if (((uc1 > hc1) and (uc1 > hc2)) or ((uc2 > hc1) and (uc2 > hc2))):
                    print("You got the high pair!")
                    return True
                else:
                    print("The house got the high pair!")
                    return False


winChose = Winner()

#Generate values for cards
unum1 = 5
unum2 = 5
hnum1 = random.randint(2, 14)
hnum2 = random.randint(2, 14)
flop1 = 5
flop2 = 5
flop3 = random.randint(2, 14)
river = random.randint(2, 14)
turn = random.randint(2, 14)

tableCards = [flop1, flop2, flop3, river, turn]

winwin = False

#Actual card names
masterkey = {
    2: "2",
    3: "3",
